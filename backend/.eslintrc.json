{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "google"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
        "no-trailing-spaces": "error",
        "no-unused-vars": "warn",
        "comma-dangle": ["error", "never"],
        "max-len": ["error", { 
            "ignoreComments": true, 
            "ignoreTrailingComments": true,
            "ignoreUrls": true,
            "ignoreStrings": true,
            "ignoreRegExpLiterals": true,
            "ignorePattern": "^\\s*var\\s.+=\\s*require\\s*\\("
            }],
        "new-cap": "warn",
        "require-jsdoc":"warn"
    }
}
