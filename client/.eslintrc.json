{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "class-property"
    ],
    "rules": {
        "no-trailing-whitespace": true,
        "semi": ["error", "never"],
        "rest-spread-spacing": "warn",
        "prefer-spread": "warn",
        "react/jsx-props-no-spreading": "off",
        "arrow-parens": "off",
        "camelcase": "off"
    }
}